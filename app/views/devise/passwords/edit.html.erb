<h2>Change your password</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }, html: {class: "form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <%= f.input :password, :hint => "New password" %>
  <%= f.input :password_confirmation, :hint => "Confirm new password" %>
  <div class=form-actions><%= f.submit 'Change my password' %></div>
<% end %>

<%= render "links" %>